<div class="container">
    <h1>Edycja mieszkania</h1>

        <%= form_with(model: @appartment, url: appartment_path,  class: "shadow p-3 mb-3 bg-secondary rounded", local: true)  do |f| %>
            <%= f.select(:block_name, options_for_select(["TÄ™czowy","Sloneczny"],@appartment.block_name), class:"default",:selected => params[:block_name]) %>
             <%= f.label :numer_mieszkania, class: "col-2 col-form-label text-light" %>
            <%= f.text_field :number_of_appart, class: "form-control shadow rounded", placeholder: "Numer mieszkania" %>
            <%= f.submit 'Edytuj' %>
        <% end %>
</div>