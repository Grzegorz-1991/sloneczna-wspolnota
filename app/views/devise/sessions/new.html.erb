<div class="container ">
<div class="row row-all-view justify-content-center align-items-center">
<div class="col-6 text-center">

  <h2 class="header-2">Zaloguj się</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "shadow p-3 mb-3 bg-secondary rounded"}) do |f| %>
    <div class="field">
      <%= f.label :email, class: "col-12 col-form-label text-light" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control shadow rounded col-12 mb-3",placeholder: "Email" %>
    </div>

    <div class="field ">
      <%= f.label :hasło, class: "col-12 col-form-label text-light" %><br />
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control shadow rounded col-12 mb-3",placeholder:"Hasło" %>
    </div>

    <div class="actions">
      <%= f.submit "Zaloguj",class:'btn btn-outline-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
</div>